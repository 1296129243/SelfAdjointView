<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="#66000000"
        android:orientation="vertical">
        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sw"
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:background="@color/cardview_light_background"
            android:layout_height="wrap_content"/>

        <com.cysion.adjointlib.view.AdjointContainer
            android:id="@+id/adcontainer1"
            style="@style/style_adjoint">

            <com.cysion.adjointlib.view.AdjointImageView
                android:id="@+id/img_ad1"
                style="@style/style_img_second"
                android:src="@mipmap/p1c"/>

            <TextView
                style="@style/txt_second"
                android:text="Hello world"
                android:textSize="24sp"/>
        </com.cysion.adjointlib.view.AdjointContainer>

        <com.cysion.adjointlib.view.AdjointContainer
            android:id="@+id/adcontainer2"
            style="@style/style_adjoint">

            <com.cysion.adjointlib.view.AdjointImageView
                android:id="@+id/img_ad2"
                style="@style/style_img_second"
                android:src="@mipmap/p2c"
                />

            <TextView
                style="@style/txt_second"
                android:text="Hello world"
                android:textSize="24sp"/>
        </com.cysion.adjointlib.view.AdjointContainer>

        <com.cysion.adjointlib.view.AdjointContainer
            android:id="@+id/adcontainer3"
            style="@style/style_adjoint">

            <com.cysion.adjointlib.view.AdjointImageView
                android:id="@+id/img_ad3"
                style="@style/style_img_second"
                android:src="@mipmap/p3c"

                />

            <TextView
                style="@style/txt_second"
                android:text="Hello world"/>
        </com.cysion.adjointlib.view.AdjointContainer>

        <com.cysion.adjointlib.view.AdjointContainer
            android:id="@+id/adcontainer4"
            style="@style/style_adjoint">

            <com.cysion.adjointlib.view.AdjointImageView
                style="@style/style_img_second"
                android:layout_width="match_parent"
                android:src="@mipmap/p4c"/>
        </com.cysion.adjointlib.view.AdjointContainer>

        <com.cysion.adjointlib.view.AdjointContainer
            android:id="@+id/adcontainer5"
            style="@style/style_adjoint">

            <com.cysion.adjointlib.view.AdjointImageView
                style="@style/style_img_second"
                android:src="@mipmap/p5c"
                />
        </com.cysion.adjointlib.view.AdjointContainer>

        <com.cysion.adjointlib.view.AdjointContainer
            android:id="@+id/adcontainer6"
            style="@style/style_adjoint">

            <com.cysion.adjointlib.view.AdjointImageView
                style="@style/style_img_second"
                android:src="@mipmap/p6c"/>
        </com.cysion.adjointlib.view.AdjointContainer>

    </LinearLayout>

</ScrollView>
